{
  "name": "embark",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "test": "bun test --coverage scripts/__tests__",
    "new-package": "bun scripts/create-package.ts",
    "new-dockerfile": "bun scripts/generate-dockerfiles-ai.ts",
    "sync-workflows": "bun scripts/sync-workflows.ts",
    "update-version-badge": "bun run scripts/update-version-badge.ts",
    "postversion": "bun run update-version-badge"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.9"
}
